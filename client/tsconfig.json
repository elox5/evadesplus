{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "module": "es6",
        "rootDir": "./src",
        "outDir": "./dist/scripts",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "inlineSources": true,
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}